@model List<Banner>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}


<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Category</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Number </th>
                                    <th> Banner Image </th>
                                    <th> Name </th>
                                    <th> Discount </th>
                                    <th> Setting </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var banner in Model)
                                {
                                    <tr>
                                        <td> @count </td>
                                        <td> <img src="~/assets/img/@banner.Image" style="width:100px; height:100px" /> </td>
                                        <td>@banner.Name</td>
                                        <td>@banner.Discount</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-Id="@banner.Id"><i class="mdi icon-frame"></i></a>
                                            <a class="btn btn-inverse-warning btn-sm" asp-action="Update" asp-route-Id="@banner.Id"><i class="mdi icon-pencil"></i></a>
                                            <form style="display:inline;" method="post" asp-action="Delete" asp-route-Id="@banner.Id">
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="mdi icon-close"></i></button>
                                            </form>

                                        </td>
                                    </tr>
                                    count++;
                                }




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
